@model Post

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            @*
                <img class="post-owner-photo" src="@Url.Content(@Model.Owner.MainPhotoPath)" />

            *@
            <img class="post-owner-photo" src="images/no_photo.png" alt="" />


        </div>
        <div class="col-md-10">
            <div class="post-owner">
                @Html.ActionLink(@Model.Owner.ToString(), "MainPage", new { userId = @Model.Owner.UserId })
            </div>
            <div class="post-data">
                @Model.Date
            </div>
        </div>
        @if (Model.Owner.IsLogin)
        {
            <div class="col-md-2">
                <button type="reset" postId="@Model.Id" class="btn btn-danger btn-sm delete-post-button">Удалить</button>
            </div>
        }
    </div>

    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-10">
            <div class="post-text">
                @Model.Text
            </div>
            <div class="post-likes">
                <button class="btn post-like-button not-liked" id="@Model.Id" postId="@Model.Id"><span class="glyphicon glyphicon-heart" postId="@Model.Id"></span> @Model.Likes.Count</button>
            </div>
        </div>
    </div>
    <script src="~/js/post_deleting.js"></script>

    @if (((User)ViewBag.User).Likes.Select(l => l.PostId).Contains(Model.Id))
    {
        <script>
                $(document).ready(function(){
                    $('#@Model.Id').removeClass('not-liked');
                    $('#@Model.Id').addClass('liked');
                });
        </script>
    }
</div>