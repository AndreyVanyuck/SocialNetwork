@model List<Post>
@inject IViewLocalizer Localizer

<div class="container-fluid posts-container">
    @foreach (var post in @Model)
    {
        string postId = "post" + post.Id;
        <div id="@postId">
            @{await Html.RenderPartialAsync("Index.cshtml", @post);}
        </div>
    }
</div>
<script>
    $('#postTextArea').val('');
    $('#photoPostInput').val('');
    $("#attached-photo-name").text("@Localizer["photo"]");

</script> 