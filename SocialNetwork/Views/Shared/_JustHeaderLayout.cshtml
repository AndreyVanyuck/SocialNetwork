@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>SimpleSocialNetwork</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/login.css?Version=3" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a asp-area="" asp-controller="User" asp-action="Index" class="navbar-brand">SimpleSocialNetwork</a>
                <a>@await Html.PartialAsync("_SelectLanguagePartial")</a>
                <a method="post" asp-controller="Account" asp-action="LogOff" class="navbar-brand">@Localizer["exit"]</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a method="post" asp-controller="Account" asp-action="LogOff" class="navbar-brand">Выйти</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        <div class="main_content">
            @RenderBody()
        </div>
    </div>
</body>
</html>