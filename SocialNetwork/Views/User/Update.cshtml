@model User

<form method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя</label>
        <input type="text" asp-for="Name" class="form-control" value="@Model.Name" required />
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Фамилия</label>
        <input type="text" asp-for="Surname" class="form-control" value="@Model.Surname" required />
    </div>

    <div class="form-group">
        <label asp-for="Gender" class="control-label">Пол</label>
        <br />
        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()"></select>
    </div>


    <div class="form-group">
        <label asp-for="BirthDay" class="control-label">Дата рождения</label>
        <input type="date" asp-for="BirthDay" id="@Model.BirthDay" class="form-control" />
    </div>


    <hr />

    <div class="form-group">
        <label asp-for="Country" class="control-label">Страна</label>
        <input type="text" asp-for="Country" class="form-control" value="@Model.Country" />
    </div>

    <div class="form-group">
        <label asp-for="City" class="control-label">Город</label>
        <input type="text" asp-for="City" id="@Model.City" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address" class="control-label">Адрес</label>
        <input type="text" asp-for="Address" id="@Model.Address" class="form-control" />
    </div>

    <hr />

    <div class="form-group">
        <label asp-for="Email" class="control-label">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" value="@Model.Email" />
    </div>

    <div class="form-group">
        <label asp-for="MobiePhone" class="control-label">Мобильный телефон</label>
        <input type="text" asp-for="MobiePhone" class="form-control" value="@Model.MobiePhone" />
    </div>

    <hr />

    <div class="form-group">
        <label asp-for="School" class="control-label">Школа</label>
        <input type="text" asp-for="School" class="form-control" value="@Model.School" />
    </div>

    <div class="form-group">
        <label asp-for="University" class="control-label">Университет</label>
        <input type="text" asp-for="University" class="form-control" value="@Model.University" />
    </div>

    <hr />

    <div class="form-group">
        <label asp-for="JobPlace" class="control-label">Место работы</label>
        <input type="text" asp-for="JobPlace" class="form-control" value="@Model.JobPlace" />
    </div>

    <div class="form-group">
        <label asp-for="JobPosition" class="control-label">Должность</label>
        <input type="text" asp-for="JobPosition" class="form-control" value="@Model.JobPosition" />
    </div>

    <hr />


    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>