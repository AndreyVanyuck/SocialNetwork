@model UserInfoViewModel
@inject IViewLocalizer Localizer

<div class="update-page">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name" class="control-label">@Localizer["name"]</label>
            <input type="text" asp-for="Name" class="form-control" value="@Model.Name" required />
        </div>
        <div class="form-group">
            <label asp-for="Surname" class="control-label">@Localizer["surname"]</label>
            <input type="text" asp-for="Surname" class="form-control" value="@Model.Surname" required />
        </div>
        <div class="form-group">
            <label>@Localizer["avatar"]</label>
            <input name="Avatar" type="file" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Gender" class="control-label">@Localizer["gender"]</label>
            <br />
            <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()"></select>
        </div>


        <div class="form-group">
            <label asp-for="BirthDay" class="control-label">@Localizer["birthday"]</label>
            <input type="date" asp-for="BirthDay" id="@Model.BirthDay" class="form-control" />
        </div>
        <hr />

        <div class="form-group">
            <label asp-for="Country" class="control-label">@Localizer["country"]</label>
            <input type="text" asp-for="Country" class="form-control" value="@Model.Country" />
        </div>

        <div class="form-group">
            <label asp-for="City" class="control-label">@Localizer["city"]</label>
            <input type="text" asp-for="City" id="@Model.City" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Address" class="control-label">@Localizer["address"]</label>
            <input type="text" asp-for="Address" id="@Model.Address" class="form-control" />
        </div>

        <hr />

        <div class="form-group">
            <label asp-for="Email" class="control-label">@Localizer["email"]</label>
            <input type="email" asp-for="Email" class="form-control" value="@Model.Email" />
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label">@Localizer["phone_num"]</label>
            <input type="text" asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
        </div>

        <hr />

        <div class="form-group">
            <label asp-for="School" class="control-label">@Localizer["school"]</label>
            <input type="text" asp-for="School" class="form-control" value="@Model.School" />
        </div>

        <div class="form-group">
            <label asp-for="University" class="control-label">@Localizer["university"]</label>
            <input type="text" asp-for="University" class="form-control" value="@Model.University" />
        </div>

        <hr />

        <div class="form-group">
            <label asp-for="JobPlace" class="control-label">@Localizer["job_place"]</label>
            <input type="text" asp-for="JobPlace" class="form-control" value="@Model.JobPlace" />
        </div>

        <div class="form-group">
            <label asp-for="JobPosition" class="control-label">@Localizer["job_position"]</label>
            <input type="text" asp-for="JobPosition" class="form-control" value="@Model.JobPosition" />
        </div>

        <hr />


        <div class="form-group">
            <input type="submit" value="@Localizer["save"]" class="btn btn-default" />
        </div>
    </form>
</div>